<%- include ('template/header.ejs') %>
    <title>Login</title>

    <body>
        <div class="content">
            <div id="login">
                <h3 class="text-center pt-5"></h3>
                <div class="container">
                    <div id="login-row" class="row justify-content-center align-items-center">
                        <div id="login-column" class="col-md-6">
                            <div id="login-box" class="col-md-12">
                                <form id="login-form" class="row g-3" action="/login" method="post" style="border-style:solid; border-width:4px;border-color:#d6ad60;">
                                    <div class="row">
                                        <div class="col-12" style="text-align: center;">
                                            <h3 style="padding-top:23px; padding-bottom:10px;">LOGIN</h3>
                                        </div>

                                    </div>
                                    <div class="col-12">
                                        <label for="username" class="form-label">Username:</label>
                                        <input type="username" name="Username" id="username" class="form-control" required>
                                    </div>
                                    <div class="col-12">
                                        <label for="password" class="form-label">Password:</label>
                                        <input type="password" name="Password" id="password" class="form-control" required>
                                    </div>
                                    <div class="form-group" style="text-align:center;">
                                        <label for="remember-me" class="text-spazio text-info"></label><br>
                                        <input type="submit" name="login" class="btn btn-info btn-md" value="Accedi" style="margin-top:15px;">
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include ('template/footer.ejs') %>
    </body>